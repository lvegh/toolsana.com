{
  "name": "toolzyhub-api",
  "version": "1.0.0",
  "description": "Secure Node.js API server for Toolsana with token protection and rate limiting",
  "main": "src/server.js",
  "scripts": {
    "start": "NODE_ENV=production node src/server.js",
    "health": "node -e \"console.log('API is healthy')\"",
    "dev": "nodemon src/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop ecosystem.config.js",
    "pm2:restart": "pm2 restart ecosystem.config.js",
    "pm2:delete": "pm2 delete ecosystem.config.js",
    "pm2:logs": "pm2 logs",
    "pm2:monit": "pm2 monit"
  },
  "keywords": [
    "nodejs",
    "express",
    "api",
    "security",
    "rate-limiting",
    "jwt",
    "pm2"
  ],
  "author": "ToolzyHub",
  "license": "MIT",
  "dependencies": {
    "@fontsource/inter": "^5.2.6",
    "@imgly/background-removal-node": "^1.4.5",
    "@noble/hashes": "^1.8.0",
    "argon2": "^0.43.0",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "connect-redis": "^7.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-fileupload": "^1.4.3",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.1.5",
    "express-session": "^1.17.3",
    "express-slow-down": "^2.0.1",
    "express-validator": "^7.0.1",
    "file-type": "^21.0.0",
    "helmet": "^7.1.0",
    "hpp": "^0.2.3",
    "joi": "^17.11.0",
    "js-yaml": "^4.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "nodemailer": "^7.0.5",
    "potrace": "^2.1.1",
    "redis": "^4.6.12",
    "satori": "^0.18.2",
    "sharp": "^0.33.5",
